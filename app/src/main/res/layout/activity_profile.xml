<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerllayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"

            />

            <ImageView
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/coverpic"
                />



        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:src="@drawable/profile"
            app:civ_border_color="#E9E9E9"
            app:civ_border_width="5dp"
            />

            <TextView
                android:layout_below="@+id/profile_img"
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kushal Shrestha"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:id="@+id/buttons_layout"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"
            >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/addfriend_icon"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginRight="45dp"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_icon"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/friend_icon"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginLeft="40dp"

                />
        </LinearLayout>
        <GridLayout
            android:columnCount="2"
            android:rowCount="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_below="@+id/buttons_layout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/profile_detail"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/location_icon"
            android:backgroundTint="@color/colorAccent"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="From Kathmandu, Nepal"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/phone_icon"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="Mobile No. +977 9863887700"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_icon"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="Male"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calender_icon"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="Birthday 1996 Sep 28"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/email_icon"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="rockushal3@gmail.com"/>






        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_detail"
            >
        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.Home_Fragment">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/profile"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kushal Shrestha"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3hr"
                android:textSize="12dp"
                android:textColor="#95989A"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="51dp"/>
            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/public_icon"
                android:backgroundTint="#95989A"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="75dp"/>
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:background="@drawable/toggel_icon"
                android:backgroundTint="#000000"
                android:layout_marginTop="10dp"
                />
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="47dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="You can give your caption"
                    android:text="You can give your caption here "
                    android:layout_marginLeft="10dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/postimg"/>



            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/drawable_header"
        app:menu="@menu/drawable_menu"
        app:itemIconTint="@color/navigation_selector_color"
        app:itemTextColor="@color/white"
        android:background="@color/colorAccent"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>