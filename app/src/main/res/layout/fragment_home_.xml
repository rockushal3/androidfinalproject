<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.Home_Fragment">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/profile"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kushal Shrestha"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="48dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3hr"
        android:textSize="12dp"
        android:textColor="#95989A"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="51dp"/>
    <TextView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/public_icon"
        android:backgroundTint="#95989A"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp"/>
    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@drawable/toggel_icon"
        android:backgroundTint="#000000"
        android:layout_marginTop="10dp"
        />
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="47dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:hint="You can give your caption"
        android:text="You can give your caption here "
        android:layout_marginLeft="10dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/postimg"/>



</LinearLayout>
</RelativeLayout>